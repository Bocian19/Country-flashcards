{% extends 'base.html.twig' %}
{% block body %}
<div class="mt-5">
    {% if correct_answers is defined %}
            <div class="d-flex justify-content-center font-weight-bold">Prawidłowych odpowiedzi: {{ correct_answers }}</div>
            <div class="d-flex justify-content-center font-weight-bold">Błędnych odpowiedzi: {{ bad_answers }}</div>

        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active  btn-primary" href="{{ path('quiz') }}">Spróbuj jeszcze raz</a>
            </li>
        </ul>
        {% else %}
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('quiz') }}">Start</a>
                </li>
            </ul>
    {% endif %}
    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('show-results') }}">Historia rezultatów</a>
        </li>
    </ul>
</div>
{% endblock %}